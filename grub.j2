GRUB_ENABLE_BLSCFG=true                     # Enable BootLoaderSpec config (used in newer RHEL-like distros)
GRUB_TIMEOUT=5                              # Timeout before default entry boots
GRUB_DISTRIBUTOR="$(sed ...)"              # Dynamically sets OS name in GRUB
GRUB_DEFAULT=saved                         # Remembers the last selected boot entry
GRUB_DISABLE_SUBMENU=true                  # Simplifies boot menu
GRUB_TERMINAL="serial console"             # Enables serial terminal and console
GRUB_SERIAL_COMMAND="serial"               # Sets GRUB to use serial port (useful for headless systems)
GRUB_CMDLINE_LINUX="{{ grub_cmdline_linux }}"  # Kernel boot parameters (from role variable)
GRUB_DISABLE_RECOVERY="true"               # Disables recovery mode entries (security measure)
